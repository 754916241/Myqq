<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e7e0e0">

    <ImageView
        android:id="@+id/img_login_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/qq_icon"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edt_login_qqnumber"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:maxLength="12"
        android:hint="请输入您的帐号"
        android:paddingLeft="10dp"
        android:background="#ffffffff"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#e7e0e0"/>

    <EditText
        android:id="@+id/edt_login_password"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffffffff"
        android:hint="请输入密码"
        android:paddingLeft="10dp"
        android:maxLength="20"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <Button
            android:id="@+id/btn_login_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_blue_select"
            android:text="登陆"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
             />
        <Button
            android:id="@+id/btn_login_regist"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_blue_select"
            android:text="注册新用户"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp" />

    </LinearLayout>

</LinearLayout>

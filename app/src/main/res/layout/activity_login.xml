<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e7e0e0"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/img_login_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/qq_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/edt_login_qqnumber"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="12"
            android:hint="请输入QQ号/手机号"
            android:paddingLeft="10dp"
            android:background="#ffffffff"
            />
        
        <ImageView
            android:id="@+id/img_expand"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/arrow_down"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
        
    </RelativeLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#e7e0e0"/>

    <EditText
        android:id="@+id/edt_login_password"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffffffff"
        android:hint="请输入密码"
        android:paddingLeft="10dp"
        android:maxLength="20"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <Button
            android:id="@+id/btn_login_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_blue_select"
            android:text="登录"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_find_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？"
                android:textColor="@color/colorApp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/text_selector_dark_white"
                />

            <TextView
                android:id="@+id/tv_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新用户注册"
                android:textColor="@color/colorApp"
                android:layout_alignParentRight="true"
                android:background="@drawable/text_selector_dark_white"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_suggest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f2f2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.wyj.myqq.activity.Suggest">

    <include
        android:id="@+id/layout_title"
        layout="@layout/common_title"
        />

    <TextView
        android:id="@+id/tv_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    请填写具体内容帮助我们了解您的意见和建议，共同打造更好的产品"
        android:layout_margin="15dp"
        android:textColor="#ABABAB"
        android:textSize="15sp"
        android:layout_below="@id/layout_title"
        />

    <EditText
        android:id="@+id/edt_suggest"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/edittext_type"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_below="@+id/tv_toast"
        />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/button_select"
        android:text="提交"
        android:textColor="@android:color/white"
        android:layout_below="@+id/edt_suggest"
        android:layout_margin="10dp"

         />

</RelativeLayout>

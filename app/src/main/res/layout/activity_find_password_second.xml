<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_password_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#e7e0e0"
    tools:context="com.wyj.myqq.activity.FindPasswordSecond">

    <include
        android:id="@+id/layout_title"
        layout="@layout/common_title"
        />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的手机号是****，请获取验证码"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:id="@+id/edt_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffffff"
            android:hint="请输入验证码"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/tv_getCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorPrimaryDark"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        >
        <EditText
            android:id="@+id/edt_pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorWhite"
            android:hint="请重置密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />

        <ImageView
            android:id="@+id/img_pwdVis"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@mipmap/eye_invisible"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/button_blue_select"
            android:text="确定"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

</LinearLayout>
